<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SocialSync" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SocialSync" parent="Base.Theme.SocialSync">
        <item name="android:fontFamily">monospace</item>
        </style>

    <style name="header1">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="header2">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="header3">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="subtitle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="body">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="small">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="clock">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomCalendarView" parent="@android:style/Widget.CalendarView">
        <item name="colorControlActivated">@color/font</item>
    </style>
    
    <style name="EditTextbox" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/body</item>
        <item name="android:background">@color/affirm</item>
    </style>

    <style name="appButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:color">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">5sp</item>
        <item name="android:textAppearance">@style/body</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingEnd">20sp</item>
    </style>

    <style name="appButtonInvalid" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_invalid</item>
        <item name="android:textColor">#D0BCBCBC</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">5sp</item>
        <item name="android:textAppearance">@style/body</item>
        <item name="android:enabled">false</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingEnd">20sp</item>
    </style>

    <style name="appButtonUnselect" parent="@style/Widget.AppCompat.Button">
        <item name="android:color">@color/black</item>
        <item name="android:textAppearance">@style/body</item>
        <item name="android:background">@drawable/button_stroke</item>
    </style>

    <style name="switchStyle" parent="@style/TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textAppearance">@style/body</item>
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/blank</item>
    </style>

</resources>