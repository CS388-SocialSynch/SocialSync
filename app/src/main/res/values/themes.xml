<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.SocialSync" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Inherit base theme and define other styles -->
    <style name="Theme.SocialSync" parent="Base.Theme.SocialSync">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Define text sizes with inheritance -->
    <style name="header1" parent="Base.Theme.SocialSync">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="header2" parent="Base.Theme.SocialSync">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="header3" parent="Base.Theme.SocialSync">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="subtitle" parent="Base.Theme.SocialSync">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="body" parent="Base.Theme.SocialSync">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="small" parent="Base.Theme.SocialSync">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="clock">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomCalendarView" parent="@android:style/Widget.CalendarView">
        <item name="colorControlActivated">@color/font</item>
    </style>
    
    <style name="EditTextbox" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/body</item>
        <item name="android:background">@drawable/black_stroke</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="appButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:color">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">5sp</item>
        <item name="android:textAppearance">@style/subtitle</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingEnd">20sp</item>
    </style>

    <style name="appButtonInvalid" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_invalid</item>
        <item name="android:textColor">#D0BCBCBC</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">5sp</item>
        <item name="android:textAppearance">@style/body</item>
        <item name="android:enabled">false</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingEnd">20sp</item>
    </style>

    <style name="appButtonUnselect" parent="@style/Widget.AppCompat.Button">
        <item name="android:color">@color/black</item>
        <item name="android:textAppearance">@style/body</item>
        <item name="android:background">@drawable/button_stroke</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">5sp</item>
    </style>

</resources>
