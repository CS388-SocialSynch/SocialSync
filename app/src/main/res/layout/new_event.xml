<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient">


    <TextView
        android:id="@+id/new_event"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/new_event"
        android:textAppearance="@style/header2"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/part_1_prog1"
        android:layout_width="125dp"
        android:layout_height="10dp"
        android:background="@drawable/rounded_affirm"
        app:layout_constraintEnd_toStartOf="@id/part_1_prog2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_event"
        />
    <View
        android:id="@+id/part_1_prog2"
        android:layout_width="125dp"
        android:layout_height="10dp"
        android:background="@drawable/rounded_blank"
        app:layout_constraintTop_toBottomOf="@id/new_event"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:id="@+id/part_1_prog3"
        android:layout_width="125dp"
        android:layout_height="10dp"
        android:background="@drawable/rounded_blank"
        app:layout_constraintTop_toBottomOf="@id/new_event"
        app:layout_constraintStart_toEndOf="@id/part_1_prog2"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/labelEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        app:layout_constraintTop_toBottomOf="@id/part_1_prog2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:textAppearance="@style/body"
        />

    <EditText
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Event Name..."
        app:layout_constraintTop_toBottomOf="@id/labelEventName"
        app:layout_constraintStart_toStartOf="@id/labelEventName"
        />
    <TextView
        android:id="@+id/labelEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location/URL"
        app:layout_constraintTop_toBottomOf="@id/eventName"
        app:layout_constraintStart_toStartOf="@id/eventName"
        android:layout_marginTop="10sp"
        android:textAppearance="@style/body"
        />

    <EditText
        android:id="@+id/eventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/labelEventLocation"
        app:layout_constraintStart_toStartOf="@id/labelEventLocation"
        android:hint="Enter Where to Meet..."
        />

    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password (optional)"
        app:layout_constraintTop_toBottomOf="@id/eventLocation"
        app:layout_constraintStart_toStartOf="@id/eventLocation"
        android:layout_marginTop="10sp"
        android:textAppearance="@style/body"
        />

    <EditText
        android:id="@+id/eventPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textVisiblePassword"
        app:layout_constraintTop_toBottomOf="@id/labelPassword"
        app:layout_constraintStart_toStartOf="@id/labelPassword"
        android:hint="(Blank means none)"
        />

    <Switch
        android:id="@+id/switchInPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/eventPassword"
        app:layout_constraintStart_toStartOf="@id/eventPassword"
        android:text="In Person"
        android:textAppearance="@style/body"
    />
    <Switch
        android:id="@+id/switchShowParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/switchInPerson"
        app:layout_constraintStart_toStartOf="@id/switchInPerson"
        android:text="Show Participants"
        android:textAppearance="@style/body"
        />
    <Switch
        android:id="@+id/switchPublic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/switchShowParticipants"
        app:layout_constraintStart_toStartOf="@id/switchShowParticipants"
        android:text="Display Publicly"
        android:textAppearance="@style/body"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="521dp"
        android:elevation="100dp" />


</androidx.constraintlayout.widget.ConstraintLayout>