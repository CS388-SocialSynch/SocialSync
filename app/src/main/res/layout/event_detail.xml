<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp">

    <!-- Event Name -->
    <TextView
        android:id="@+id/eventDetailEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Event Name"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <!-- Event Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/detail_background"
        android:elevation="6dp"
        android:orientation="vertical">

        <!-- Time -->
        <TextView
            android:id="@+id/timeDetailEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="Start Time - End Time"
            android:textSize="25sp" />


        <!-- Date -->
        <TextView
            android:id="@+id/dateDetailEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="Date"
            android:textSize="20sp" />

        <!-- Seperating line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="10" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="80"
                android:background="#80000000" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="10" />
        </LinearLayout>

        <!-- Location Name -->
        <TextView
            android:id="@+id/locationNameDetailEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="Location Name"
            android:textSize="20sp" />

        <!-- Address -->
        <TextView
            android:id="@+id/addressDetailEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="Address"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Weather -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weatherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Weather"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/detail_background"
                android:elevation="6dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/weatherIconEventDetail"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:contentDescription="image_of_weather"
                    android:src="@drawable/sunny_icon" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp">

                    <!-- Weather Details -->
                    <TextView
                        android:id="@+id/feelLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="4dp"
                        android:text="Feels like: 50"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="4dp"
                        android:text="Humidity: 40%"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/wind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="4dp"
                        android:text="Wind: 400 mph"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Attendees -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:background="@drawable/detail_background"
                android:elevation="6dp"
                android:orientation="vertical">

                <!-- Attendees Header -->
                <LinearLayout
                    android:id="@+id/attendingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/attendSwitch"
                        android:checked="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="16dp"
                        android:text="Attending?"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Modify Event Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/modifyTimeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/secondary2"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="Modify Time"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/leaveButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/secondary2"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="Leave"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/modifyEventButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/secondary2"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="Modify Event"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Incoming Users -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">

                <!-- Incoming Text -->
                <TextView
                    android:id="@+id/incoming"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Incoming:"
                    android:textSize="30sp" />

                <!-- Share Icon -->
                <ImageView
                    android:id="@+id/shareEvent"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Share Event"
                    android:src="@drawable/share_icon" />

            </LinearLayout>

            <!-- Incoming Event Users -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/IncomingRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/user_item" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
