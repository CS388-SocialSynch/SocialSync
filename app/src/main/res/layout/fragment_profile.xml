    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/display_name"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_export" />

    <EditText
        android:id="@+id/etDisplayName"
        android:layout_width="332dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:paddingHorizontal="12dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="name"
        android:inputType="text"
        app:cornerRadius="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayName" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChangeDisplayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/appButton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/secondary1"
        android:text="@string/change_display_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDisplayName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/change_display_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/appButton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/secondary1"
        android:text="@string/change_display_photo"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeDisplayName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/appButton"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/logout"
        android:text="@string/log_out"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeDisplayName" />


</LinearLayout>
