<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/new_event"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:text="@string/new_event"
            android:textAppearance="@style/header2"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <View
            android:id="@+id/part_1_prog1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/rounded_blank"
            android:layout_marginLeft="5dp"
            />
        <View
            android:id="@+id/part_1_prog2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/rounded_affirm"
            android:layout_marginLeft="5dp"

            />
        <View
            android:id="@+id/part_1_prog3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/rounded_blank"
            android:layout_marginLeft="5dp"

            />
        </LinearLayout>
        <!--            do a check of the second half is %15-->
        <!-- Start Time-->
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/labelStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time (15 minute increments)"
            android:textAppearance="@style/body"
            />

        <EditText
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="ex: 5:15 pm"
            />
        <!-- end Time-->
        <TextView
            android:id="@+id/labelEndTime"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time (15 minute increments)"
            android:textAppearance="@style/body"
            />

        <EditText
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="ex: 5:15 pm"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/MON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON"
                android:backgroundTint="@color/secondary1"
                android:background="@drawable/button_stroke"
                android:textColor="@color/secondary1"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TUE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON"
                android:backgroundTint="@color/secondary1"
                android:background="@drawable/button_stroke"
                android:textColor="@color/secondary1"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/WED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON"
                android:backgroundTint="@color/secondary1"
                android:background="@drawable/button_stroke"
                android:textColor="@color/secondary1"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/THU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON"
                android:backgroundTint="@color/secondary1"
                android:background="@drawable/button_stroke"
                android:textColor="@color/secondary1"
                />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>