        <!--    switchShowParticipants switch    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchShowParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:showText="false"
                android:checked="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Show Participants?"
                style="@style/body"/>
        </LinearLayout>


        <!--    public switch    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:showText="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Display Publicly?"
            style="@style/body"/>
    </LinearLayout>
    <!--    In person switch    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchInPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:showText="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="In-person?"
            style="@style/body"/>
    </LinearLayout>

<!--        In Person Address-->
        <LinearLayout
            android:id="@+id/addressSnippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/orange_gradient"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/labelStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street Address"
                style="@style/subtitle"
                />

            <EditText
                android:id="@+id/eventStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="ex: 1000 Warren St"
                style="@style/EditTextbox"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/labelTown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Town"
                        android:layout_marginTop="5sp"
                        style="@style/subtitle"
                        />

                    <EditText
                        android:id="@+id/eventTown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="ex: Newark"
                        style="@style/EditTextbox"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/labelState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:layout_marginTop="5sp"
                        style="@style/subtitle"
                        />

                    <EditText
                        android:id="@+id/eventState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="ex: NJ"
                        style="@style/EditTextbox"
                        />
                    </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/labelCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:layout_marginTop="5sp"
                        style="@style/subtitle"
                        />

                    <EditText
                        android:id="@+id/eventCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="ex: US"
                        style="@style/EditTextbox"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/labelZip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zipcode"
                        android:layout_marginTop="5sp"
                        style="@style/subtitle"
                        />

                    <EditText
                        android:id="@+id/eventZip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="ex: 07012"
                        style="@style/EditTextbox"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

<!--        Next Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:backgroundTint="@color/secondary1"
        style="@style/appButton"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>