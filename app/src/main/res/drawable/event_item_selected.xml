<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/secondary1"
                android:endColor="@color/secondary2"
                android:angle="0"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="@color/black" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
